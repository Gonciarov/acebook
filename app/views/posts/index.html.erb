

<h1>Posts</h1>
<%= link_to 'New post', new_post_path %>
<table>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.message %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Update', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
