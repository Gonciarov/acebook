<h1>All Posts</h1>
<%= link_to 'New post', new_user_post_path(@user) %>
<table>

  <% @posts.reverse.each do |post| %>
    <tr>
      <td><strong><%= @user.name %>:  </strong></td>
      <td><%= time_ago_in_words(post.created_at) %></td>
      <td><%= post.message %></td>
      <td><%= link_to 'Show', user_post_path(@user.id, post.id)%></td>
        <td><%= link_to 'Delete', [post.user, post],
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>


<h2>Your Posts</h2>
<table>
<% @user.posts.reverse.each do |post| %>
  <p>
    <strong>Post:</strong>
  </p>
  <strong>Post ID:</strong>
