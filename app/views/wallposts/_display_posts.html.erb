
<b><%= wpost.poster %>
(<%= time_ago_in_words(wpost.created_at) %> ago):</b> <br>
<td><%= wpost.content %>
<br>
<div class="form-inline">
<div class="group">
<%= render 'wallposts/likes_button', wpost: wpost %> 
</div>
<% if wpost.likes != 0 %>
<%= pluralize(wpost.likes, 'like') %> 
<% end %>

</div>
<% if (wpost.poster == current_user.name) %>
  <%= link_to 'Edit', edit_user_wallpost_path(@user, wpost.id) %> </td>
<% end %>

<% if (wpost.poster == current_user.name) || (wpost.user_id == current_user.id) %>
  <%= link_to 'Delete', [wpost.user, wpost],
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
<% end %>

