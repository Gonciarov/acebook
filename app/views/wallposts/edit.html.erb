<h2> Edit your post on <%= @user.name%>'s wall </h2>

<% if @wallpost.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@wallpost.errors.count, "error") %> Please fill all fields.
      </h2>
      <ul>
        <% @wallpost.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<%= form_for [@user, @wallpost], url: { controller: "wallposts", action: "update", user_id: @user.id}, method: :patch do |form| %>
  <p>
    <%= form.label :message %>
    <%= form.text_field :content %>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', user_path(@user) %>